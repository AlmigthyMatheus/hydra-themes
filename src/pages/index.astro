---
import Layout from "../layouts/Layout.astro";
import { ThemeList } from "@/components/ui/theme-list";
import type { ThemeListResponse } from "@/pages/api/themes";

const themes = await fetch("http://localhost:4321/api/themes?page=1").then(
  (res) => res.json() as Promise<ThemeListResponse>,
);
---

<Layout title="Hydra Themes">
  <ThemeList client:load themes={themes.edges} themeCount={themes.count} />
</Layout>
